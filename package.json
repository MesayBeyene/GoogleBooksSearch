  "bugs": {
    "url": "https://github.com/MesayBeyene/GoogleBooksSearch/issues"
  },
  "homepage": "https://github.com/MesayBeyene/GoogleBooksSearch#readme",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.1.0",
    "express": "^4.16.3",
    "if-env": "^1.0.4",
    "mongoose": "^5.6.13",
    "react-router-dom": "^5.0.1"
  }
}
